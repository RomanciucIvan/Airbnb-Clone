<%= simple_form_for([@apartment, @booking]) do |form| %>
 
  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_field :start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_field :end_date %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Booking.statuses.keys.map { |status| [status.titleize, status] } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>