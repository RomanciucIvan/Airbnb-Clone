
<%= simple_form_for([@apartment, @review]) do |form| %>
  <div class="field form-group">
    <%= form.label :content, "Content" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= form.submit "Create Review", class: "btn btn-primary" %>
  </div>
<% end %>
