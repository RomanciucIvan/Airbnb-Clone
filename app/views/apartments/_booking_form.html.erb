<% 
  guests = [['1 гость', 1], ['2 гостя', 2], ['3 гостя', 3], ['4 гостя', 4]]
%>

<div class="booking-form">
  <%= simple_form_for([@apartment, @booking]) do |form| %>

  <div class="booking">
    <div class="booking__price-per-night">
      <span class="booking__price-amount"><%= @apartment.price %> </span>
      <span class="booking__currency">€</span>
      <span class="booking__per-night">ночь</span>
    </div>
    <div class="booking__details">
      <div class="booking__date">
        <%= form.label :start_date %>
          <%= form.date_field :start_date, value: Date.today, disabled: @apartment.user == current_user %> <%#  disabled  выключаем взаимодействие с какимлибо полем  %> 
      </div>
      <div class="booking__date">
        <%= form.label :end_date %>
      <%= form.date_field :end_date, value: Date.today, disabled: @apartment.user == current_user %>
      </div>
      <div class="booking__guests">
        <%= form.input :guests, collection: guests, class: 'booking__guests-select', disabled: @apartment.user == current_user  %>
      </div>
    </div>
  </div>
  <%= form.submit "Book this apartment", class: "btn btn-primary", disabled: @apartment.user == current_user %>
  <% end %>
</div>