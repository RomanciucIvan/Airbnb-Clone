<div class="container">
  <%= render "apartments/apartment"  %>

  <div class="reviews" style="max-width: 600px;">
    <%= render 'reviews/form', review: @review %>

    <% @apartment.reviews.each do |review| %>
      <p><%= review.content %></p>
      <% if policy(review).destroy? %>
        <%= button_to "Delete", apartment_review_path(@apartment, review), method: :delete, data: { confirm: 'Вы уверены?' } %>
      <% end %>
    <% end %>
  </div>

  <div class="apartment-actions">
    <% if policy(@apartment).edit? %>
      <%= link_to "Edit", edit_apartment_path(@apartment) %> |
    <% end %>

    <%= link_to "Back to apartments", apartments_path %>

    <% if policy(@apartment).destroy? %>
      <%= link_to "Delete", @apartment, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
    <% end %>
  </div>
</div>
